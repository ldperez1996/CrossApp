<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    tools:context=".CreateWorkoutActivity">

    <EditText
        android:id="@+id/workoutNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Entreno"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/workoutDescriptionEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n del Entreno"
        app:layout_constraintTop_toBottomOf="@id/workoutNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/createWorkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Nuevo Entreno"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_purple"
        app:layout_constraintTop_toBottomOf="@id/workoutDescriptionEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
